<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView 
        android:id="@+id/tv_record_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:text="4"
        android:textSize="@dimen/record_month_year_text_size"
        android:textColor="@color/record_total_equal_text_color"/>
    <Button 
        android:id="@+id/btn_record_add"
        android:layout_toRightOf="@id/tv_record_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/record_right"/>
    <Button 
        android:id="@+id/btn_record_reduce"
        android:layout_toLeftOf="@id/tv_record_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/record_left"/>

</RelativeLayout>
