<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color" >
    
    <include layout="@layout/home_actionbar"
        android:id="@+id/home_actionbar"/>
    
    <include layout="@layout/home_bottom"
        android:id="@+id/home_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    
    <FrameLayout
        android:id="@+id/home_content_layout"
        android:layout_below="@id/home_actionbar"
        android:layout_above="@id/home_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </FrameLayout>
    
    
</RelativeLayout>
