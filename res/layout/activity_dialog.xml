<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg" >
    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/dialog_height"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        <TextView 
	        android:id="@+id/dialog_content_text"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/dialog_content_text_height"
	        android:background="@drawable/dialog_content_text_round_corner_rect"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_btn_height"
            android:orientation="horizontal" >
            <Button 
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="@dimen/dialog_btn_text_size"
                android:textColor="@color/dialog_btn_cancel_text_color"
                android:background="@drawable/dialog_btn_cancel_selector"/>
            
            <Button 
                android:id="@+id/dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:textSize="@dimen/dialog_btn_text_size"
                android:textColor="@color/dialog_btn_confirm_text_color"
                android:background="@drawable/dialog_btn_confirm_selector"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    

</RelativeLayout>
