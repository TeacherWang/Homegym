<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >
    
    <LinearLayout 
        android:id="@+id/train_action_set_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/train_action_set_item_height"
        android:orientation="horizontal">
        <TextView 
	        android:id="@+id/train_action_set_item_group_num"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:layout_gravity="center_vertical"
	        android:text="第一组"
	        android:textColor="@color/black"
	        android:textSize="@dimen/train_action_set_group_num_decr_size"/>
	
	    <TextView 
	        android:id="@+id/train_action_set_item_count_num"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:layout_gravity="center_vertical"
	        android:text="10"
	        android:textColor="@color/black"
	        android:textSize="@dimen/train_action_set_group_num_decr_size"/>
	    
	    <TextView 
	        android:id="@+id/train_action_set_item_tool_weight"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:layout_gravity="center_vertical"
	        android:text="5"
	        android:textColor="@color/black"
	        android:textSize="@dimen/train_action_set_group_num_decr_size"/>
	    
	    <TextView 
	        android:id="@+id/train_action_set_item_burning"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:layout_gravity="center_vertical"
	        android:text="36"
	        android:textColor="@color/black"
	        android:textSize="@dimen/train_action_set_group_num_decr_size"/>
    </LinearLayout>
    
</FrameLayout>
