<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <io.vov.vitamio.widget.VideoView
        android:id="@+id/demo_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	<ImageView
        android:id="@+id/video_exit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/video_exit" />
    <TextView 
        android:id="@+id/action_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/action_demo_name_margin_top"
        android:textSize="@dimen/action_demo_name_size"
        android:textColor="@color/white"/>
    
    <RelativeLayout
        android:id="@+id/demo_end_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_50_transparent" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_centerHorizontal="true" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/replay"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <ImageView
	            android:id="@+id/demo_end_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/video_repaly" />
        </RelativeLayout>
        
        <Button 
            android:id="@+id/demo_end_btn"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="104dp"
            android:text="@string/demo_end"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/dialog_btn_confirm_selector"/>
        
    </RelativeLayout>
    
</RelativeLayout>
