<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_color" >
	
    <include layout="@layout/home_actionbar"
        android:id="@+id/detail_plan_home_actionbar"/>
    
    <RelativeLayout
        android:id="@+id/calendar_layout"
        android:layout_below="@id/detail_plan_home_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/calender_layout_margin_top"
        android:background="@color/white" >
        
        <RelativeLayout
            android:id="@+id/calendar_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/calendar_date_left_img_margin_top" >
            <ImageView
                android:id="@+id/calendar_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/calendar_date_left_img_margin_left_right"
                android:background="@drawable/icon_date_left" />
            <TextView
                android:id="@+id/calendar_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/record_detail_text_color"
                android:textSize="@dimen/calendar_date_text_size" />
            <ImageView
                android:id="@+id/calendar_right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/calendar_date_left_img_margin_left_right"
                android:background="@drawable/icon_date_right" />
        </RelativeLayout>
        
        <com.runrunfast.homegym.widget.KCalendar
            android:id="@+id/calendar_view"
            android:layout_below="@id/calendar_head_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/calender_height" >
            
        </com.runrunfast.homegym.widget.KCalendar>
        
    </RelativeLayout>
    
    <TextView
        android:id="@+id/current_day_text"
        android:layout_below="@id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_plan_current_day_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/detail_plan_current_day_text_margin"
        android:text="@string/current_day_train_content"
        android:textColor="@color/record_total_equal_text_color"
        android:textSize="@dimen/detail_plan_current_day_text_size"
        android:background="@color/transparent" />
    
    <RelativeLayout
        android:id="@+id/have_actions_layout"
        android:layout_below="@id/current_day_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >
        <Button 
	        android:id="@+id/btn_join_in_train"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/detail_plan_join_btn_height"
	        android:layout_alignParentBottom="true"
	        android:text="@string/join_train"
	        android:textColor="@color/white"
	        android:textSize="@dimen/join_in_text_size"
	        android:background="@drawable/bt_start_train_corner_rect" />
        
        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_plan_join_btn_height"
            android:layout_alignParentBottom="true"
            android:background="#009944" >
            <ProgressBar 
	            android:id="@+id/progress_bar"
	            android:layout_centerInParent="true"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:layout_marginLeft="4dp"
	            android:layout_marginRight="4dp"
	            android:background="@color/transparent"
	            android:max="100"
	            android:progress="0"
	            style="@android:style/Widget.ProgressBar.Horizontal" />
            <TextView 
                android:id="@+id/progress_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
        
        <ListView
            android:id="@+id/course_train_list"
            android:layout_above="@id/btn_join_in_train"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/detail_plan_list_margin_left_right"
            android:layout_marginRight="@dimen/detail_plan_list_margin_left_right"
            android:divider="@color/account_divider_color"
            android:dividerHeight="1px" >
            
        </ListView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rest_day_layout"
        android:layout_below="@id/current_day_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/rest_day"
            android:textSize="@dimen/detail_rest_day"
            android:textColor="@color/black" />
        
    </RelativeLayout>
    
</RelativeLayout>
