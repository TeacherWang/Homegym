<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
        <com.runrunfast.homegym.widget.WheelView
	        android:id="@+id/select_wheelview_one"
	        android:layout_width="@dimen/popwindow_content_two_width"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="@dimen/popwindow_content_two_margin"
    	android:orientation="vertical" >
	    <com.runrunfast.homegym.widget.WheelView
	        android:id="@+id/select_wheelview_two"
	        android:layout_width="@dimen/popwindow_content_two_width"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>
