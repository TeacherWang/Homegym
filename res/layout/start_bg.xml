<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/start_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    
    <TextView 
        android:id="@+id/start_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="3234"
        android:textSize="@dimen/start_bg_text2_size"
        android:textColor="@color/white"/>
    
    <TextView 
        android:id="@+id/start_text1"
        android:layout_above="@id/start_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/start_bg_text1_margin_bottom"
        android:text="32"
        android:textSize="@dimen/start_bg_text1_size"
        android:textColor="@color/white"/>

</RelativeLayout>
