<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_action_bar_height"
    android:background="@color/login_action_bar_bg" >
    <ImageView 
        android:id="@+id/login_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/nav_back_white"/>
    
    <TextView 
        android:id="@+id/login_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/login_action_bar_title_size"
        android:textColor="@color/login_action_bar_title_color"/>

</RelativeLayout>
