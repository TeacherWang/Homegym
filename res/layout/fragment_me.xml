<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/record_detail_layout_bg" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_bg_height"
        android:background="@drawable/me_bg" >
        <com.runrunfast.homegym.widget.CircleMaskImageView
	        android:id="@+id/account_head_img"
	        android:layout_width="@dimen/account_headimg_size"
	        android:layout_height="@dimen/account_headimg_size"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="@dimen/account_headimg_margin_top"
	        android:background="@drawable/me_head_pic" />
        <LinearLayout
            android:id="@+id/account_name_layout"
            android:layout_below="@id/account_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_name_margin_top"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true" >
            <TextView 
		        android:id="@+id/account_name_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="测试帐号"
		        android:textColor="@color/white"
		        android:textSize="@dimen/account_name_size"/>
            <ImageView 
                android:id="@+id/account_sex_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/account_sex_img_margin_left"
                android:background="@drawable/sex_men"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/account_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/account_address_margin_top" >
