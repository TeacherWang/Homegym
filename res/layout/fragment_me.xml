<!--             </RelativeLayout> -->
            
            <View
			    android:layout_width="1dip"
			    android:layout_height="@dimen/account_finish_divider_height"
			    android:layout_gravity="center_vertical"
			    android:background="@color/white" />
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_total_days"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/account_finish_descrip_margin_top"
                    android:textColor="@color/white"
                    android:textSize="@dimen/account_finish_descrip_text_size" />
                <TextView 
                    android:id="@+id/account_finish_days_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_centerInParent="true"
                    android:text="136"
                    android:textSize="@dimen/account_finish_num_size"
                    android:textColor="@color/record_total_consume_number_color"/>
                <TextView
                    android:layout_below="@id/account_finish_days_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/account_finish_descrip_unit_margin_top"
                    android:textColor="@color/white"
                    android:textSize="@dimen/account_finish_descrip_unit_size" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="@dimen/account_person_info_layout_margin_top"
	    android:background="@color/account_divider_color" />
    
    <RelativeLayout
        android:id="@+id/me_personal_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_item_height"
        android:background="@color/account_item_bg" >
        <ImageView 
            android:id="@+id/account_info_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/account_item_margin_left"
            android:layout_centerVertical="true"
            android:background="@drawable/me_icon1"/>
        <TextView
            android:layout_toRightOf="@id/account_info_img" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/account_item_text_margin_left"
            android:text="@string/account_personal_info"
            android:textSize="@dimen/account_item_text_size"
            android:textColor="@color/black"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/account_item_goto_margin_right"
            android:background="@drawable/me_into"/>
    </RelativeLayout>
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/account_divider_color" />
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="@dimen/account_item_divider"
	    android:background="@color/account_divider_color" />
    <RelativeLayout
        android:id="@+id/account_feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_item_height"
        android:background="@color/account_item_bg" >
        <ImageView 
            android:id="@+id/account_feedback_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/account_item_margin_left"
            android:layout_centerVertical="true"
            android:background="@drawable/me_icon2"/>
        <TextView
            android:layout_toRightOf="@id/account_feedback_img" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/account_item_text_margin_left"
            android:text="@string/account_feedback"
            android:textSize="@dimen/account_item_text_size"
            android:textColor="@color/black"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/account_item_goto_margin_right"
            android:background="@drawable/me_into"/>
    </RelativeLayout>
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/account_divider_color" />
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="@dimen/account_item_divider"
	    android:background="@color/account_divider_color" />
    <RelativeLayout
        android:id="@+id/account_about_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_item_height"
        android:background="@color/account_item_bg" >
        <ImageView 
            android:id="@+id/account_about_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/account_item_margin_left"
            android:layout_centerVertical="true"
            android:background="@drawable/me_icon3"/>
        <TextView
            android:layout_toRightOf="@id/account_about_img" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/account_item_text_margin_left"
            android:text="@string/account_about"
            android:textSize="@dimen/account_item_text_size"
            android:textColor="@color/black"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/account_item_goto_margin_right"
            android:background="@drawable/me_into"/>
    </RelativeLayout>
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/account_divider_color" />
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginTop="@dimen/account_exit_divider"
	    android:background="@color/account_divider_color" />
    
    <Button 
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_exit_height"
        android:text="@string/account_exit"
        android:textColor="@color/black"
        android:textSize="@dimen/account_exit_size"
        android:background="@drawable/btn_account_exit_selector"/>
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/account_divider_color" />

</LinearLayout>
