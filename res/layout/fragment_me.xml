<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.runrunfast.homegym.widget.CircleMaskImageView
        android:id="@+id/account_head_img"
        android:layout_width="@dimen/account_headimg_size"
        android:layout_height="@dimen/account_headimg_size"
        android:layout_marginTop="@dimen/account_headimg_margin_top"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_icon_add" />
    <TextView 
        android:id="@+id/account_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/account_name_margin_top"
        android:text="测试帐号"
        android:textSize="@dimen/account_name_size"/>

</LinearLayout>
