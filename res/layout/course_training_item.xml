<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView 
        android:id="@+id/action_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />
    <!-- 蒙版 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/course_img_mask">
    </ImageView>
    
    <TextView 
        android:id="@+id/course_train_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/course_train_name_margin_top"
        android:layout_marginLeft="@dimen/course_train_name_margin_left"
        android:text="平板卧推举"
        android:textSize="@dimen/course_train_name_size"
        android:textColor="@color/white"/>
    <TextView 
        android:id="@+id/course_train_action_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/course_train_action_num_margin_top"
        android:layout_marginRight="@dimen/course_train_action_num_margin_right"
        android:layout_alignParentRight="true"
        android:text="动作二"
        android:textSize="@dimen/course_train_action_num_size"
        android:textColor="@color/course_train_action_num_color"/>
    
	<TextView 
	    android:id="@+id/course_train_position_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/course_train_decrip_margin_top"
	    android:layout_marginLeft="@dimen/course_train_name_margin_left"
	    android:text="背部 胸部"
	    android:textColor="@color/white"
	    android:textSize="@dimen/course_train_decrip_size"/>
	
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/course_train_diffcult_margin_top"
	    android:layout_marginLeft="@dimen/course_train_name_margin_left" >
	    <TextView 
		    android:id="@+id/course_train_diffcult_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="难度"
		    android:textColor="@color/white"
		    android:textSize="@dimen/course_train_decrip_size"/>
	    <LinearLayout
	        android:layout_toRightOf="@id/course_train_diffcult_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/course_train_diffcult_img_margin"
	        android:orientation="horizontal" >
	        <ImageView
	            android:id="@+id/course_train_diffcult_level1_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/icon_difficulty_level" />
	        <ImageView
	            android:id="@+id/course_train_diffcult_level2_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/course_train_diffcult_img_margin"
	            android:background="@drawable/icon_difficulty_level" />
	        <ImageView
	            android:id="@+id/course_train_diffcult_level3_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/course_train_diffcult_img_margin"
	            android:background="@drawable/icon_difficulty_level" />
	    </LinearLayout>
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/course_train_time_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/course_train_time_margin_bottom"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/course_train_action_num_margin_right"
	    android:text="15分钟 38千卡"
	    android:textSize="@dimen/course_train_decrip_size"
	    android:textColor="@color/white"/>
</RelativeLayout>
