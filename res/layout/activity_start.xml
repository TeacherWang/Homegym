<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_course_bg" >

    <android.support.v4.view.ViewPager
	     android:id="@+id/start_view_pager"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/start_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/start_bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/start_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/start_register_bg"
            android:text="@string/register"
            android:textColor="@color/start_register_text_color"
            android:textSize="@dimen/start_text_size"
            android:gravity="center"
            android:onClick="onClick"
            android:clickable="true"/>
        <TextView 
            android:id="@+id/start_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/start_login_text_bg"
            android:text="@string/login"
            android:textColor="@color/start_login_text_color"
            android:textSize="@dimen/start_text_size"
            android:gravity="center"
            android:onClick="onClick"
            android:clickable="true"/>
    </LinearLayout>
    
</RelativeLayout>
